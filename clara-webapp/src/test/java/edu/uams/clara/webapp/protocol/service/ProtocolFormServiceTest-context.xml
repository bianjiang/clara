	<bean id="xmlProcessor"
		class="edu.uams.clara.webapp.xml.processor.impl.DefaultXmlProcessorImpl" />

	<bean id="protocolDao" class="edu.uams.clara.webapp.protocol.dao.ProtocolDao" />
	<bean id="protocolFormDao"
