<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="agenda/minutes-template" template="/WEB-INF/layouts/agenda/minutes-template.jspx">
		<put-list-attribute name="styles" inherit="true"></put-list-attribute>
		<put-list-attribute name="ie_styles" inherit="true"></put-list-attribute>
		<put-list-attribute name="javascripts" inherit="true"><add-attribute value="/static/js/moment.js" />
		</put-list-attribute>
	</definition>

<definition name="agenda/item-template" template="/WEB-INF/layouts/agenda/agenda-item-template.jspx">
		<put-list-attribute name="styles">
			
			<add-attribute value="/static/styles/application.css" type="string" />
			<add-attribute value="/static/styles/icons.css" type="string" />
		</put-list-attribute>
		<put-list-attribute name="ie_styles">
			<add-attribute value="/static/styles/application_ie.css" type="string" />
		</put-list-attribute>
		<put-list-attribute name="javascripts">
			<add-attribute value="/static/js/encoder.js" />  
			<add-attribute value="/static/js/moment.js" />  
		</put-list-attribute>
	</definition>

</tiles-definitions>
